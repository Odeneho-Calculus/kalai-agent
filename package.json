{
  "name": "kalai-agent",
  "displayName": "KalAI Agent",
  "description": "AI-powered coding assistant with context-aware suggestions and code analysis",
  "version": "0.1.0",
  "publisher": "kalculus",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "code-assistant",
    "copilot",
    "context-aware",
    "productivity"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Odeneho-Calculus/kalai-agent"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kalai-agent.startChat",
        "title": "KalAI: Start Chat",
        "category": "KalAI Agent"
      },
      {
        "command": "kalai-agent.editWithAI",
        "title": "KalAI: Edit with AI",
        "category": "KalAI Agent"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kalai-agent",
          "title": "KalAI Agent",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "kalai-agent": [
        {
          "id": "kalai-agent.chatView",
          "name": "AI Chat",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "kalai-agent.editWithAI",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "configuration": {
      "title": "KalAI Agent",
      "properties": {
        "kalai-agent.aiEndpoint": {
          "type": "string",
          "default": "https://openrouter.ai/api/v1/chat/completions",
          "description": "API endpoint for AI model (OpenRouter, Hugging Face, etc.)"
        },
        "kalai-agent.apiKey": {
          "type": "string",
          "default": "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",
          "description": "OpenRouter API key"
        },
        "kalai-agent.modelName": {
          "type": "string",
          "default": "qwen/qwen3-30b-a3b:free",
          "description": "AI model to use for code assistance"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "markdown-it": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/json-schema": "^7.0.15",
    "@types/markdown-it": "^13.0.1",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.17.37",
    "@types/prop-types": "^15.7.9",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}