{
  "name": "kalai-agent",
  "displayName": "Kalai Agent",
  "description": "Advanced AI-powered coding assistant with comprehensive project analysis, multi-step planning, and intelligent development tools",
  "version": "2.0.0",
  "publisher": "kalculus",
  "engines": {
    "vscode": "^1.99.1"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "code-assistant",
    "copilot",
    "context-aware",
    "productivity"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Odeneho-Calculus/kalai-agent"
  },
  "bugs": {
    "url": "https://github.com/Odeneho-Calculus/kalai-agent/issues"
  },
  "homepage": "https://github.com/Odeneho-Calculus/kalai-agent#readme",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kalai-agent.startChat",
        "title": "Kalai: Start Chat",
        "category": "Kalai Agent",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "kalai-agent.editWithAI",
        "title": "Kalai: Edit with AI",
        "category": "Kalai Agent",
        "icon": "$(edit)"
      },
      {
        "command": "kalai-agent.explainCode",
        "title": "Kalai: Explain Code",
        "category": "Kalai Agent",
        "icon": "$(info)"
      },
      {
        "command": "kalai-agent.generateTests",
        "title": "Kalai: Generate Tests",
        "category": "Kalai Agent",
        "icon": "$(beaker)"
      },
      {
        "command": "kalai-agent.optimizePerformance",
        "title": "Kalai: Optimize Performance",
        "category": "Kalai Agent",
        "icon": "$(rocket)"
      },
      {
        "command": "kalai-agent.findSecurityIssues",
        "title": "Kalai: Find Security Issues",
        "category": "Kalai Agent",
        "icon": "$(shield)"
      },
      {
        "command": "kalai-agent.generateDocumentation",
        "title": "Kalai: Generate Documentation",
        "category": "Kalai Agent",
        "icon": "$(book)"
      },
      {
        "command": "kalai-agent.refactorCode",
        "title": "Kalai: Refactor Code",
        "category": "Kalai Agent",
        "icon": "$(tools)"
      },
      {
        "command": "kalai-agent.searchCodebase",
        "title": "Kalai: Search Codebase",
        "category": "Kalai Agent",
        "icon": "$(search)"
      },
      {
        "command": "kalai-agent.analyzeArchitecture",
        "title": "Kalai: Analyze Project Architecture",
        "category": "Kalai Agent",
        "icon": "$(organization)"
      },
      {
        "command": "kalai-agent.getLatestTechInfo",
        "title": "Kalai: Get Latest Tech Info",
        "category": "Kalai Agent",
        "icon": "$(globe)"
      },
      {
        "command": "kalai-agent.explainSelection",
        "title": "Kalai: Explain Selected Code",
        "category": "Kalai Agent"
      },
      {
        "command": "kalai-agent.refactorSelection",
        "title": "Kalai: Refactor Selected Code",
        "category": "Kalai Agent"
      },
      {
        "command": "kalai-agent.clearConversation",
        "title": "Kalai: Clear Conversation",
        "category": "Kalai Agent",
        "icon": "$(clear-all)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kalai-agent",
          "title": "Kalai Agent",
          "icon": "media/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "kalai-agent.chatView",
        "contents": "Welcome to Kalai Agent! Start chatting to get AI-powered code assistance.\n[Start Chat](command:kalai-agent.startChat)",
        "when": "!kalai-agent.isLoading"
      }
    ],
    "views": {
      "kalai-agent": [
        {
          "type": "webview",
          "id": "kalai-agent.chatView",
          "name": "AI Chat",
          "icon": "$(comment-discussion)",
          "visibility": "visible",
          "when": "true"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "kalai-agent.editWithAI",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste"
        },
        {
          "command": "kalai-agent.explainSelection",
          "when": "editorHasSelection",
          "group": "kalai-agent"
        },
        {
          "command": "kalai-agent.refactorSelection",
          "when": "editorHasSelection",
          "group": "kalai-agent"
        }
      ],
      "commandPalette": [
        {
          "command": "kalai-agent.startChat"
        },
        {
          "command": "kalai-agent.editWithAI",
          "when": "editorIsOpen"
        },
        {
          "command": "kalai-agent.explainCode",
          "when": "editorIsOpen"
        },
        {
          "command": "kalai-agent.generateTests",
          "when": "editorIsOpen"
        },
        {
          "command": "kalai-agent.optimizePerformance",
          "when": "editorIsOpen"
        },
        {
          "command": "kalai-agent.findSecurityIssues",
          "when": "editorIsOpen"
        },
        {
          "command": "kalai-agent.generateDocumentation",
          "when": "editorIsOpen"
        },
        {
          "command": "kalai-agent.refactorCode",
          "when": "editorIsOpen"
        },
        {
          "command": "kalai-agent.searchCodebase"
        },
        {
          "command": "kalai-agent.analyzeArchitecture"
        },
        {
          "command": "kalai-agent.getLatestTechInfo"
        },
        {
          "command": "kalai-agent.clearConversation"
        }
      ],
      "view/title": [
        {
          "command": "kalai-agent.clearConversation",
          "when": "view == kalai-agent.chatView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.config.js",
    "watch": "node -e \"const { build, extensionConfig, webviewConfig } = require('./esbuild.config.js'); const esbuild = require('esbuild'); Promise.all([esbuild.context(extensionConfig).then(ctx => ctx.watch()), esbuild.context(webviewConfig).then(ctx => ctx.watch())]).then(() => console.log('Watching for changes...'));\"",
    "package": "npm run compile && vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "axios": "^1.9.0",
    "markdown-it": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/json-schema": "^7.0.15",
    "@types/markdown-it": "^13.0.1",
    "@types/mdast": "^4.0.4",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.17.37",
    "@types/prop-types": "^15.7.9",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "css-loader": "^6.11.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.2.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^5.1.4"
  }
}
