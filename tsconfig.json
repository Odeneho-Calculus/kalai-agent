{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "skipLibCheck": true,
    "types": [
      "node",
      "vscode"
    ],
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "include": [
    "src/**/*",
    "webview/**/*"
  ]
}