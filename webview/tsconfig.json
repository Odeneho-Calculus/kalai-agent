{
    "compilerOptions": {
        "composite": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "outDir": "../dist/webview",
        "rootDir": ".",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        },
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "react",
            "react-dom",
            "node"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}